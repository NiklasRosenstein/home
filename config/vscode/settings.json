{
  // General editor settings
  "editor.autoClosingBrackets": false,
  "editor.rulers": [79],
  "editor.tabSize": 2,
  "editor.fontSize": 14,
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.suggestOnTriggerCharacters": false,
  "editor.minimap.enabled": false,
  "editor.snippetSuggestions": "top",
  "editor.tabCompletion": false,
  "emmet.triggerExpansionOnTab": false,

  "explorer.sortOrder": "default",

  // File settings
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "*.pyp": "python",
    "Craftrfile": "python",
    "*.craftr": "python"
  },
  "files.exclude": {
    "**/*.pyc": true
  },

  // Terminal settings
  "terminal.integrated.shell.windows": "C:\\Users\\niklas\\Repositories\\NiklasRosenstein\\home\\config\\vscode\\bash.cmd",
  "terminal.integrated.shell.linux": "bash",
  "terminal.integrated.cursorBlinking": true,

  // Language specific settings
  "[cpp]": {
    "editor.rulers": [120]
  },
  "[html]": {
    "editor.rulers": [100]
  },
  "[markdown]": {
    "editor.quickSuggestions": false,
    "editor.wordWrap": "off",
    "editor.renderWhitespace": "boundary",
    "files.trimTrailingWhitespace": false
  },

  // Window settings
  "window.zoomLevel": 0,
  "workbench.iconTheme": "vscode-great-icons",  // VSCode Great Icons
  "workbench.colorTheme": "Adapta Nokto",  // Linux themes for VSCode
  "extensions.ignoreRecommendations": true,
  "explorer.confirmDragAndDrop": false,
  "workbench.activityBar.visible": false,
  "window.menuBarVisibility": "toggle",
  "glsllint.glslangValidatorPath": "glslangValidator",
  "window.smoothScrollingWorkaround": true,
  "explorer.openEditors.visible": 0,
  "explorer.autoReveal": true,
  "window.restoreWindows": "none",
  "workbench.startupEditor": "newUntitledFile"
}